@{
    ViewData["Title"] = "Carrito de Compras";
}



<div class="row">
    <div class="col-md-8">
        <h2>Carrito de Compras</h2>

        <!-- Aquí puedes agregar la tabla o el contenido del carrito de compras -->
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Puedes usar un bucle para mostrar los elementos del carrito -->
                <tr>
                    <td>Rosas</td>
                    <td>₡10,000.00</td>
                    <td>2</td>
                    <td>₡20,000.00</td>
                    <td>
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                    </td>
                </tr>

                <tr>
                    <td>Arbol Frutal</td>
                    <td>₡3,000.00</td>
                    <td>3</td>
                    <td>₡9,000.00</td>
                    <td>
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                    </td>
                </tr>
                <!-- Agrega más filas según sea necesario -->
            </tbody>
        </table>

        <!-- Puedes agregar el botón de finalizar compra u otras acciones aquí -->
        <button class="btn btn-primary">Finalizar Compra</button>
    </div>

    <!-- Puedes agregar un panel lateral con resumen del carrito, información adicional, etc. -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Resumen del Carrito</h5>
                <p class="card-text">Total: ₡29,000.00</p>
                <a href="#" class="btn btn-success">Finalizar Compra</a>
            </div>
        </div>
    </div>
</div>
