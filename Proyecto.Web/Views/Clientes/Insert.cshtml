@using Proyecto.Domain.InputModels.Cliente;
@model NuevoCliente
@{
    ViewData["Title"] = "Añadir Cliente";
    Layout = "~/Views/Shared/_LayoutNoNavbar.cshtml";
}

<div class="container-fluid" style="max-width: 924px;">
    <div class="row">
        <div class="col-12">
            <h1><i class="fa-solid fa-person-circle-plus"></i> Add Clientes</h1>
        </div>
    </div>
    <form method="post">
        <fieldset>
            <div class="table">
                <div class="row">
                    <div class="col-12 text-danger form-text" asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.NombreCliente" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.NombreCliente" class="form-control">
                        <span asp-validation-for="@Model.NombreCliente" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.ApellidoCliente" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.ApellidoCliente" class="form-control">
                        <span asp-validation-for="@Model.ApellidoCliente" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.CedulaCliente" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.CedulaCliente" class="form-control">
                        <span asp-validation-for="@Model.CedulaCliente" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.CorreoElectronico" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.CorreoElectronico" class="form-control">
                        <span asp-validation-for="@Model.CorreoElectronico" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.NumeroTelefono" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.NumeroTelefono" class="form-control">
                        <span asp-validation-for="@Model.NumeroTelefono" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <label asp-for="@Model.DireccionCliente" class="form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="@Model.DireccionCliente" class="form-control">
                        <span asp-validation-for="@Model.DireccionCliente" class="text-danger form-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-user-shield"></i>Agregar</button>
                        <a asp-asp-controller="Clientes" asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                    </div>
                </div>
        </fieldset>
    </form>
</div>