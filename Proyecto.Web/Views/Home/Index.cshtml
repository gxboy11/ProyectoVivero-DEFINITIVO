@using Proyecto.Domain.DTOs.Productos;
@model List<Producto>


@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="text-center">
    <h1 class="display-4">Productos</h1>
    <p>Seleccione la planta adecuada a su jardín</p>
</div>

<div class="row" style="margin-top:80px;">
    @foreach (var Producto in Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@Producto.ImagenProducto" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Producto.NombreProducto</h5>
                @* <p class="card-text">@Producto.DescripcionProducto</p> *@
                <p class="card-text">@Producto.IdCategoria</p>
            </div>
            @* <ul class="list-group list-group-flush">
        @* <li class="list-group-item">Precio: @Producto.PrecioProducto</li>
        <li class="list-group-item">Categoría: @Producto.IdCategoria</li>

        </ul> *@
            <div class="card-body">

                <button style="font-weight:bold" type="button" class="btn btn-default passDatos"
                        data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                        data-name="@Producto.NombreProducto"
                        data-desc="@Producto.DescripcionProducto"
                        data-precio=" Precio: @Producto.PrecioProducto"
                        data-image="@Producto.ImagenProducto">
                    Ver Más
                </button>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="staticBackdropLabel"><p id="pTitulo"></p></h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">


                <h5 id="txtDesc"></h5>
                <h5 id="txtPrecio"></h5>
                <br /><br />
                <img id="txtImage" src="" style="width:100%" height="500">
                @* <iframe id="txtVideo" style="width:400%" height="500"
                src="">
                </iframe> *@
                <br /><br />
                <br /><br />
                <button type="button" class="btn btn-success" style="width:50%" left="50%">Comprar</button>

            </div>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script>

    $(".passDatos").click(function () {
        $("#pTitulo").text($(this).attr('data-name'));
        $("#txtDesc").text($(this).attr('data-desc'));
        $("#txtPrecio").text($(this).attr('data-precio'));
        $("#txtImage").attr("src", $(this).attr('data-image'));
    })


</script>
